{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json",
    "watchAssets": true
  },
  "watchAssets": true,
  "watchIgnore": ["tmp/**/*", "uploads/**/*", "logs/**/*", "node_modules/**/*"]
}